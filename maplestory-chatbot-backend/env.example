# API Keys (최소한 ANTHROPIC_API_KEY는 필수)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
VOYAGE_API_KEY=your_voyage_api_key_here  # Voyage AI 임베딩용 (권장)

# Claude Settings
CLAUDE_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096
TEMPERATURE=0.7

# 프롬프트 설정
USE_SYSTEM_PROMPT=true  # 새로운 메이플스토리 전문 시스템 프롬프트 사용
ENABLE_ANSWER_TEMPLATE=true  # 구조화된 답변 템플릿 사용

# Vector Store
VECTOR_STORE_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-if-needed
COLLECTION_NAME=maplestory_docs

# 임베딩 설정 (Voyage AI 우선 사용)
EMBEDDING_PROVIDER=auto  # auto, voyage, openai, local
EMBEDDING_MODEL=text-embedding-ada-002  # OpenAI 모델
VOYAGE_MODEL=voyage-3.5-lite  # Voyage AI 모델
LOCAL_EMBEDDING_MODEL=intfloat/multilingual-e5-large  # 로컬 모델
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Redis
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGINS=["http://localhost:3000"]
RATE_LIMIT_PER_MINUTE=10

# FastAPI Settings
APP_NAME=메이플스토리 AI 어시스턴트
APP_VERSION=1.0.0
DEBUG_MODE=false

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
API_URL=http://localhost:8000

# Application Settings
LOG_LEVEL=INFO
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200 