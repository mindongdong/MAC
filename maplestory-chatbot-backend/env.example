# API Keys (최소한 ANTHROPIC_API_KEY는 필수)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
VOYAGE_API_KEY=your_voyage_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Claude Settings
CLAUDE_MODEL=claude-3-5-haiku-20241022
MAX_TOKENS=4096
TEMPERATURE=0.3

# 프롬프트 설정
USE_SYSTEM_PROMPT=true  # 새로운 메이플스토리 전문 시스템 프롬프트 사용
ENABLE_ANSWER_TEMPLATE=false

# Vector Store
VECTOR_STORE_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
COLLECTION_NAME=maplestory_docs

# 임베딩 설정 (Voyage AI 우선 사용)
EMBEDDING_PROVIDER=auto
EMBEDDING_MODEL=text-embedding-ada-002
VOYAGE_MODEL=voyage-3.5-lite
LOCAL_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Redis
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGINS=["http://localhost:3000"]
RATE_LIMIT_PER_MINUTE=10

# FastAPI Settings
APP_NAME=메이플스토리 AI 어시스턴트
APP_VERSION=1.0.0
DEBUG_MODE=false

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
API_URL=http://localhost:8000

# Application Settings
LOG_LEVEL=INFO
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Quality Settings (개선됨)
MIN_RELEVANCE_SCORE=0.75
MAX_REFERENCE_SOURCES=3
REQUIRE_URL_IN_SOURCES=true
STRICT_DOCUMENT_MATCHING=true

# Search Optimization Settings (신규)
SEARCH_TYPE=similarity_score_threshold
MAX_RETRIEVAL_DOCS=5
ENABLE_DOCUMENT_FILTERING=true
ENABLE_RESPONSE_VALIDATION=true

# Embedding Settings
EMBEDDING_PROVIDER=auto
EMBEDDING_MODEL=text-embedding-ada-002
VOYAGE_MODEL=voyage-3.5-lite
LOCAL_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200 